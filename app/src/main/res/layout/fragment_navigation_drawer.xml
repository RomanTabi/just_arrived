<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/drawer_background"
                android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/drawer_list_item_height"
            android:text="@string/app_name"
            android:textSize="@dimen/headline_size"
            android:textColor="@color/colorTextIcons"
            android:layout_gravity="bottom"
            android:gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_between_content_areas">

        <RelativeLayout
            android:id="@+id/my_location_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_list_item_height"
            android:paddingLeft="@dimen/base_padding"
            android:paddingRight="@dimen/base_padding"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_pin_drop_grey_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/drawer_item_text_left_margin"
                android:text="@string/my_location"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/drawer_item_text_size"
                android:textStyle="bold"/>

        </RelativeLayout>

