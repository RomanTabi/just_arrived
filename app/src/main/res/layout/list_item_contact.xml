<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_and_list_items_height"
                android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/contat_icon_size"
        android:layout_height="match_parent"
        android:src="@drawable/ic_person_outline_24dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"
        android:id="@+id/contact_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/list_items_texts_left_margin"
        android:layout_marginStart="@dimen/list_items_texts_left_margin"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/subheading"
            android:maxLines="1"
            android:id="@+id/contact_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:maxLines="1"
            android:id="@+id/contact_number"/>

    </LinearLayout>

</RelativeLayout>